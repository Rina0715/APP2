<div class="containar px-5 px-sm-0">
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        <label for="inputImage">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        <label for="inputImage">Introduction</label>
        <%= f.text_area :introduction %>
        <div class='row'>
        <%= f.submit "Update User", class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
